<div class="title login flex flex-wrap gap-4 justify-between py-4 px-2">
  <span>
    <%= link_to root_path do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
      </svg>
    <% end %>
  </span>
  <span><h2>SIGNUP</h2></span>
  <span>
    Next
  </span>
</div>

<div class="flex flex-col flex-wrap py-2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { 'class' => "flex flex-col gap-2"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field flex flex-col">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "Full Name" %>
    </div>

    <div class="field flex flex-col">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field flex flex-col">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field flex flex-col">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions w-4/5 flex justify-center text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800 my-2">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>

<%- if  devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "w-4/5 flex justify-center text-blue-700 hover:text-white hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800" %>
<% end %>
